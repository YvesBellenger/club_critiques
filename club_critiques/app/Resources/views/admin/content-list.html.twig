<div class="row">
    <div id="content-list" class="wrap-mini-contents content-list">
        {% if contents.items is defined %}
            {% for key,content in contents.items %}
                <div class="col-md-3  mini-content">
                    {% if content.volumeInfo.imageLinks is defined and content.volumeInfo.imageLinks.thumbnail is defined %}
                        <img class="img-thumbnail" id="image-{{ key }}" src="{{ content.volumeInfo.imageLinks.thumbnail }}">
                    {% else %}
                        <img class="img-thumbnail" id="image-{{ key }}" src="{{ asset('img/image_missing.jpeg') }}">
                    {% endif %}
                    <div class="book-infos" id="book-{{ key }}">
                        <h3><span id="title-{{ key }}">{{ content.volumeInfo.title }}</span></h3>
                        <p>Auteur(s): <span id="authors-{{ key }}">{% if content.volumeInfo.authors is defined %}{% for key,author in content.volumeInfo.authors %} {{ author }}{% if (key+1) != content.volumeInfo.authors|length %},{% endif %}{% endfor %}{% else %}Inconnu{% endif %}</span></p>
                        <p>Categorie: <span id="category-{{ key }}">{% if content.volumeInfo.categories is defined %}{{ content.volumeInfo.categories|first }}{% else %}Inconnu{% endif %}</span></p>
                        <p>Ann√©e de parution: <span  id="publishedDate-{{ key }}">{% if content.volumeInfo.publishedDate is defined %}{{ content.volumeInfo.publishedDate|date('Y') }}{% endif %}</span></p>
                        <p class="hidden" id="description-{{ key }}">{% if content.volumeInfo.description is defined %}{{ content.volumeInfo.description }}{% endif %}</p>
                    </div>
                    <button data-index="{{ key }}" onclick="addContent(this)" title="Ajouter le livre"><i class="material-icons">&#xE147;</i></button>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>