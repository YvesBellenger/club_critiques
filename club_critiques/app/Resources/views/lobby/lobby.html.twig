{% extends 'base.html.twig' %}

{% block title %}Club des critiques | Salon{% endblock %}
{% block javascripts %} <script type="text/javascript" src="{{ asset('js/lobby.js') }}"> </script>
    <style>
        #chat strong {
            color: blue;
        }
    </style>
{% endblock %}
{% block body %}


    <div class="wrapper container-fluid" id="salon">
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <div class="concept">
                    <h2>Salon : {{ lobby.content.title }} - {{ lobby.content.author.name }}</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-md-offset-1 bloc-chat" id="block-chat">
                <section id="chat">

                </section>

                <form action="/" method="post" id="form-chat">
                    <input type="hidden" name="user_id" id="user_id" value="{{ user.id }}" />
                    <input type="hidden" name="username" id="username" value="{{ user.username }}" />
                    <input type="hidden" name="lobby" id="lobby" value="{{ lobby.id }}" />
                    <input type="text" name="message" id="message" placeholder="Votre message..." size="50" autofocus />
                    <input type="submit" id="send" value="Envoyer" />
                </form>
            </div>

            <div class="col-md-4 liste-membres">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Liste des membres dans le salon</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {%  for participant in lobby.participants %}
                        <tr>
                            <td scope="row">{{ participant.firstName|capitalize }} {{ participant.lastName|upper }} - ({% if participant.id != user.id %}{{ participant.username }}{% else %}moi{% endif %})</td>
                            <td>
                                <div class="liste-salon-item {% if controller is defined and controller == 'salons' %}active{% endif %}">
                                        <span>
                                            {% if participant.id != user.id %}
                                                <a href="{{ path('salon') }}">Signaler | Contacter</a>
                                            {% else %}
                                                -
                                            {% endif %}
                                        </span>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js"></script>

{% endblock %}