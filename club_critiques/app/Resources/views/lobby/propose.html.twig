{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper container-fluid" id="lobby-propose">
        <div class="row">
            <div class="col-md-9 col-md-offset-1">
                <h2>PROPOSER UN SALON</h2>
            </div>
        </div>

        <div class="contact row">
            <div class="col-md-6 col-md-offset-3">
                {{ form_start(form) }}
                <div class="form-group row">

                    <label class="col-md-3 col-form-label" for="name">Contenu :</label>
                    <div class="col-md-9">
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Date de d√©but : </label>
                    <div class="col-md-9">
                        {{ form_widget(form.date_start) }}
                        {{ form_errors(form.date_start) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Date de fin : </label>

                    <div class="col-md-9">
                        {{ form_widget(form.date_end) }}
                        {{ form_errors(form.date_end) }}
                    </div>
                </div>
                <div style="display:none">
                    {{ form_rest(form) }}
                </div>
                <div class="form-group row">
                    <button type="submit" class="btn btn-primary pull-right">Envoyer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}